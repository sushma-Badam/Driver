<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.it.acumen.recurtingsystem.Main2Activity">


    <EditText
        android:id="@+id/driver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="enter your name" />

    <EditText
        android:id="@+id/driver_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/driver_name"
        android:layout_below="@+id/driver_name"
        android:layout_marginTop="63dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="enter yourpassword" />

    <Button
        android:id="@+id/driver_login_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/driver_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="login" />

    <TextView
        android:id="@+id/driver_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/driver_login_bt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:text="Register ur account" />
</RelativeLayout>
